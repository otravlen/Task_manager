<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"] - Task_manager</title>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Task_manager.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/2.1.6/css/dataTables.dataTables.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TO DO LIST</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="modal fade" id="modal" tableindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Информация</h5>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-close btn-secondary" data-bs-dismiss="modal"></button>
                    <button type="button" class="btn primary" id="saveBtn">Сохранить</button>
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="row">
            <div class="col-md-4 order-md-2 mb-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted"> Выполненные задачи</span>
                </h4>
                <ul class="list-group mb-3" id="completedListTask"></ul>
                <div class="card col-md-12">
                    <button type="submit" class="btn btn-secondary" id="calculateTask">Закончить день</button>
                </div>
            </div>
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3 text-muted">Создание задачи</h4>
                @RenderBody()
            </div> 
        </div>

    </div>

    <!--<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Task_manager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    -->
    
    <script src="https://cdn.datatables.net/2.1.6/css/dataTables.dataTables.css"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/modal.js"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    $(document).ready(function () {
        $.ajax({
            type: 'GET',
            url: '@Url.Action("GetCompletedTasks", "Task")',
            success: function (data) {
                const ulElement = $('#completedListTask');

                for (var i = 0; i < data.data.length; i++) {
                    const task = data.data[i];
                    ulElement.append(`
                        <li class="list-group-item d-flex justify-content-between">
                            <div>
                                <h6 class="my-0">Название: ${task.name}</h6>
                                <small class="text-muted">Описание: ${task.description}</small>
                            </div>
                        </li>
                    `);
                }
            }
        })
    })
</script>
