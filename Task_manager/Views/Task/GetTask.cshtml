@using Task_manager.Enum
@model TaskVievModel

@{
    ViewBag.Title = "title";
    
}

<form id="taskForm">
    <input asp-for="Id" hidden/>
    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="@Model.Name" class="col-form-label"></label>
            <input asp-for="@Model.Name" type="text" class="form-control" />
        </div>
        <div class="form-group col-md-6">
            <label asp-for="@Model.Priority" class="col-form-label"></label>
            <select asp-for="@Model.Priority" class="form-select mb-3" asp-items="Html.GetEnumSelectList<Priority>()"></select>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="@Model.IsDone" class="col-form-label"></label>
                <input type:"text" asp-for="@Model.IsDone" type="text" class="form-control" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Created" class="col-form-label"></label>
                <input type:"text" asp-for="@Model.Created" type="text" class="form-control" disabled="disabled"/>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-12">
                <label asp-for="@Model.Description" class="col-form-label"></label>
                <textarea asp-for="@Model.Description" type="text" class="form-control"></textarea>
            </div>
        </div>
    </div>
</form>